<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Main style for the application. Inherits from the light AppCompat theme -->
    <style name="helpsTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="android:colorPrimary">@color/red</item>
      <item name="android:colorAccent">@color/redDark</item>
      <item name="drawerArrowStyle">@style/helpsDrawerArrowStyle</item>
    </style>
  
    <!-- Style for fullscreen activities in the application. Inherits from the light AppCompat theme -->
    <style name="helpsFullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/red</item>
    </style>

    <style name="helpsDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>
    </style>
</resources>
