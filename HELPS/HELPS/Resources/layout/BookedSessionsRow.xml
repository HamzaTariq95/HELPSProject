<?xml version="1.0" encoding="utf-8"?>
<!-- Controls the display of the booked sessions/workshop ListView -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp" >
    <LinearLayout
        android:id="@+id/bookedLineOne"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/bookedSessionTitle"
          android:layout_width="290dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:textSize="18dp"
          android:textColor="@color/charcoal"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/bookedSessionStatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:gravity="right"
          android:textSize="18dp"
          android:textColor="@color/charcoal"
          android:layout_weight="1"/>
    </LinearLayout>
  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_below="@+id/bookedLineOne" >
      <TextView
          android:id="@+id/bookedSessionDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginTop="6dp"
          android:textSize="14dp"
          android:textStyle="bold"
          android:textColor="@color/charcoal" />
      <!--<TextView
          android:id="@+id/bookedSessionLocation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginTop="6dp"
          android:textSize="14dp"
          android:gravity="right"
          android:textColor="@color/charcoal" />
      <TextView
          android:id="@+id/bookedSessionTutor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginTop="6dp"
          android:textSize="14dp"
          android:textColor="@color/charcoal" />-->
      <TextView
          android:id="@+id/bookedSessionType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:textSize="14dp"
          android:gravity="right"
          android:textColor="@color/charcoal" />
    </LinearLayout>
</RelativeLayout>