<?xml version="1.0" encoding="utf-8"?>
<!-- Custom layout for the search ListView-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp" >
    <!-- Workshop's topic. -->
  <LinearLayout
      android:id="@+id/searchLineOne"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/searchWorkshopTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:textColor="@color/charcoal"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/searchWorkshopStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:textSize="18dp"
        android:textColor="@color/charcoal"
        android:layout_weight="1"/>
  </LinearLayout>
    <!-- Second line. -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/searchLineOne" >
        <!-- Workshop date. -->
        <TextView
            android:id="@+id/searchWorkshopDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:text="31/31/2015 12:00:00 PM"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/charcoal" />
        <!-- Workshop target group. -->
        <TextView
            android:id="@+id/searchWorkshopTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:textColor="@color/charcoal" />
        <!-- Workshop type. -->
        <TextView
            android:id="@+id/searchWorkshopType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:textColor="@color/charcoal" />
    </LinearLayout>
</RelativeLayout>